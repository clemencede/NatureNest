<div class="center"><h1>My dashboard</h1></div>

<h2 class="titredash">My Infos</h2>
<div class="edit-link">
<%= link_to edit_user_registration_path, class: "edit-link" do %> Edit <i class="fas fa-pencil-alt"></i>
<% end %>
</div>
<div class= "card_info_user">
  <div class="notification-actions">
    <% if current_user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key, height: 50, width: 100, crop: :fill %>
    <% else %>
      <img src="https://res.cloudinary.com/dzwtudz1z/image/upload/v1678893370/favicon_ayxzgj.png" alt="">
    <% end %>
  </div>

  <div class= "profileinfos">
    <h2> <%= current_user.first_name%></h2>
    <h2> <%= current_user.last_name%></h2>
    <h2> <%= current_user.email%></h2>
    <h2> <%= current_user.description%></h2>
  </div>
</div>

<h2 class="titredash">My Bookings</h2>
<div class="bookings">
  <% current_user.bookings.each do |booking| %>
    <div class="booking">
      <%= cl_image_tag booking.tent.photo.key, width: 100, height: 100, crop: :fill %>
      <h3><%= booking.tent.name.capitalize %></h3>
      <div class="btn_delete">
        <%= link_to "Delete a booking", booking_path(booking), class: "btn btn-info", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    </div>
  <% end %>
</div>
