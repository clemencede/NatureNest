
<div class="container" class="mx-auto" style="width: 500px;">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Confirm your booking</h1>
      <%= simple_form_for [@tent, @booking] do |f| %>
      <%= f.input :start_date, as: :date, label: "Date de debut" %>
      <%= f.input :end_date, as: :date, label: "Date de fin" %>
      <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


