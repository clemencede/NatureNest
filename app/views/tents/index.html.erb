  <div class="center-button">
    <%= link_to "Create a new tent", new_tent_path, class: "btn btn-flat" %>
  </div>

  <div class="row">
    <% @tents.each do |tent| %>
      <%= link_to tent_path(tent), class:"text-decoration-none" do %>
        <div class="card-tent">
          <%# <img class="d-block w-100" src="https://source.unsplash.com/random/?tent/"> %>
          <div class="card-tent-infos">
            <div>
              <h2><%= tent.name %></h2>
              <p><%= tent.address %></p>
              <p><%= tent.description %></p>
              <% if tent.photo.attached? %>
                <p><%= cl_image_tag tent.photo.key, class: "image-tent" %></p>
              <% end %>
              <h2 class="card-tent-pricing"><%= tent.price %>â‚¬</h2>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
</div>
