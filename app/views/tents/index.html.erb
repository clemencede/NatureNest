<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Find all of our tents</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Tent</h3>
    <%= link_to "Create a new tent", new_tent_path, class: "btn btn-flat" %>
  </div>

<form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>


<div class="card-trip">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
  <div class="card-trip-infos">
    <div>
      <h2> Tent name </h2>
      <p> Disponibility</p>
    </div>
    <h2 class="card-trip-pricing">Price</h2>
  </div>
</div>

  <div class="row">
    <% @tents.each do |tent| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to tent_path(tent), class:"text-decoration-none" do %>
          <div class="card-category" data-aos="zoom-in">
            <%= tent.name %>
            <%= tent.address %>
            <%= tent.description %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
