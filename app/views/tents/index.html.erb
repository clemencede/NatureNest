<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="titre">
    <h1>Find all of our tents</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@1,300&family=Outfit:wght@600&display=swap" rel="stylesheet">
<div class="container py-2">

  <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
    <div class="search-form-control form-group">

      <%= form_with url: tents_path, method: :get do |form| %>
        <div class="input-group">
          <%= form.text_field :query, placeholder: "Search...", class: "form-control" %>
          <div class="input-group-append">
            <%= form.button type: "submit", class: "btn" do %>
              <i class="fas fa-search"></i>
            <% end %>
          </div>
        </div>
      <% end %>

    </div>
  </form>

  <br> <p> If you have a tent and want to rent it, create it: </p>
